#! /bin/sh

# $Id$

/bin/echo "Bringing down all network interfaces..."
for i in `/bin/ls /sys/class/net/`; do
	/sbin/ifconfig ${i} down
done

/bin/echo "Sending all processes the TERM signal..."
/sbin/killall5 -15
/bin/sleep 1

/bin/echo "Sending all processes the KILL signal..."
/sbin/killall5 -9
/bin/sleep 1
