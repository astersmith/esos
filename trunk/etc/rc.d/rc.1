#! /bin/sh

# $Id$

if [ -x /etc/rc.d/rc.pacemaker ]; then
    /etc/rc.d/rc.pacemaker stop
fi

if [ -x /etc/rc.d/rc.corosync ]; then
    /etc/rc.d/rc.corosync stop
fi

if [ -x /etc/rc.d/rc.network ]; then
    /etc/rc.d/rc.network stop
fi

/bin/echo "Sending all processes the TERM signal..."
/sbin/killall5 -15
/bin/sleep 1

/bin/echo "Sending all processes the KILL signal..."
/sbin/killall5 -9
/bin/sleep 1
