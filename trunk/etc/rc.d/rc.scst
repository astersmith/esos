#! /bin/sh

# $Id$

IB_MODS="mlx4_ib ib_mthca ib_ipath ib_qib"
SCST_MODS="qla2xxx scst qla2x00tgt iscsi-scst scst_disk scst_vdisk"
SCST_CFG="/etc/scst.conf"

# Load the InfiniBand modules
for i in ${IB_MODS}; do
	/sbin/modprobe ${i}
done

# Load the SCST modules and drivers
for i in ${SCST_MODS}; do
	/sbin/modprobe ${i}
done

# Start the iSCSI SCST daemon
/usr/sbin/iscsi-scstd

# Configure SCST
if [ -f ${SCST_CFG} ]; then
	/usr/sbin/scstadmin -config ${SCST_CFG}
fi
